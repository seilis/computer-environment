###############################################################################
# Simple Makefile for installing configuration files
###############################################################################

# Tools to use
CP?=cp

###############################################################################
# Project variables
###############################################################################
CONFIG=config
BACKUP=.backup

###############################################################################
# Top-level targets
###############################################################################
.PHONY : all vim

all: vim

vim: ${CONFIG}/.vimrc
	${CP} ${HOME}/.vimrc ${HOME}/.vimrc${BACKUP}
	${CP} ${CONFIG}/.vimrc ${HOME}/.vimrc
